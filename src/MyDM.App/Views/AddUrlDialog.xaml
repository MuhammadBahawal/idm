<Window x:Class="MyDM.App.Views.AddUrlDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Download" Width="640"
        SizeToContent="Height" MinHeight="460" MaxHeight="700"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip"
        Background="{StaticResource WindowBackgroundBrush}" FontFamily="Bahnschrift">

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" CornerRadius="14" Padding="14"
                Background="{StaticResource PanelCardBrush}"
                BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Create Download Task" FontSize="18" FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>
                <TextBlock Text="Paste any direct file URL and start immediately or queue it paused."
                           FontSize="12" Margin="0,6,0,0" Foreground="{StaticResource TextMutedBrush}"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Margin="0,12,0,0" CornerRadius="14" Padding="16"
                Background="{StaticResource PanelCardBrush}"
                BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource MetaLabelText}" Text="URL" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="UrlTextBox" Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource MetaLabelText}" Text="File Name" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="FileNameTextBox"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource MetaLabelText}" Text="Save To" VerticalAlignment="Center"/>
                <Grid Grid.Row="4" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" x:Name="SavePathTextBox"/>
                    <Button Grid.Column="1" Content="Browse" Style="{StaticResource ToolbarButton}" Margin="8,0,0,0"
                            Click="BrowseFolder_Click"/>
                </Grid>

                <TextBlock Grid.Row="6" Grid.Column="0" Style="{StaticResource MetaLabelText}" Text="Category" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="6" Grid.Column="1" x:Name="CategoryCombo">
                    <ComboBoxItem Content="Auto-detect" IsSelected="True"/>
                    <ComboBoxItem Content="Video"/>
                    <ComboBoxItem Content="Music"/>
                    <ComboBoxItem Content="Documents"/>
                    <ComboBoxItem Content="Programs"/>
                    <ComboBoxItem Content="Compressed"/>
                    <ComboBoxItem Content="Others"/>
                </ComboBox>

                <TextBlock Grid.Row="8" Grid.Column="0" Style="{StaticResource MetaLabelText}" Text="Connections" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="8" Grid.Column="1" x:Name="ConnectionsCombo" Width="110" HorizontalAlignment="Left">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="8" IsSelected="True"/>
                    <ComboBoxItem Content="16"/>
                    <ComboBoxItem Content="32"/>
                </ComboBox>

                <TextBlock Grid.Row="10" Grid.Column="0" Style="{StaticResource MetaLabelText}" Text="Description" VerticalAlignment="Center"/>
                <TextBox Grid.Row="10" Grid.Column="1" x:Name="DescriptionTextBox"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" Margin="0,12,0,0" CornerRadius="14" Padding="12"
                Background="{StaticResource PanelCardBrush}"
                BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Start Download" Style="{StaticResource PrimaryButton}" Click="StartDownload_Click"
                        Margin="0,0,10,0" MinWidth="150"/>
                <Button Content="Add Paused" Style="{StaticResource ToolbarButton}" Click="AddPaused_Click"
                        Margin="0,0,10,0" MinWidth="120"/>
                <Button Content="Cancel" Style="{StaticResource ToolbarButton}" Click="Cancel_Click" MinWidth="90"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
