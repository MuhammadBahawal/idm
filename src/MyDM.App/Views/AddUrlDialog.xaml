<Window x:Class="MyDM.App.Views.AddUrlDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Download" Height="460" Width="560"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{StaticResource BgBrush}" FontFamily="Segoe UI">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- URL -->
        <Label Grid.Row="0" Grid.Column="0" Content="URL:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="UrlTextBox" Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- File Name -->
        <Label Grid.Row="2" Grid.Column="0" Content="File Name:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="FileNameTextBox"/>

        <!-- Save To -->
        <Label Grid.Row="4" Grid.Column="0" Content="Save to:" VerticalAlignment="Center"/>
        <Grid Grid.Row="4" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" x:Name="SavePathTextBox"/>
            <Button Grid.Column="1" Content="Browse" Style="{StaticResource ToolbarButton}" Margin="8,0,0,0"
                    Click="BrowseFolder_Click" Background="{StaticResource BgLightBrush}"/>
        </Grid>

        <!-- Category -->
        <Label Grid.Row="6" Grid.Column="0" Content="Category:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="6" Grid.Column="1" x:Name="CategoryCombo">
            <ComboBoxItem Content="Auto-detect" IsSelected="True"/>
            <ComboBoxItem Content="Video"/>
            <ComboBoxItem Content="Music"/>
            <ComboBoxItem Content="Documents"/>
            <ComboBoxItem Content="Programs"/>
            <ComboBoxItem Content="Compressed"/>
            <ComboBoxItem Content="Others"/>
        </ComboBox>

        <!-- Connections -->
        <Label Grid.Row="8" Grid.Column="0" Content="Connections:" VerticalAlignment="Center"/>
        <Grid Grid.Row="8" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Column="0" x:Name="ConnectionsCombo">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="8" IsSelected="True"/>
                <ComboBoxItem Content="16"/>
                <ComboBoxItem Content="32"/>
            </ComboBox>
        </Grid>

        <!-- Description -->
        <Label Grid.Row="10" Grid.Column="0" Content="Description:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="10" Grid.Column="1" x:Name="DescriptionTextBox"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Start Download" Style="{StaticResource PrimaryButton}" Click="StartDownload_Click"
                    Margin="0,0,12,0" MinWidth="140"/>
            <Button Content="Add Paused" Style="{StaticResource ToolbarButton}" Click="AddPaused_Click"
                    Background="{StaticResource BgLightBrush}" Margin="0,0,12,0"/>
            <Button Content="Cancel" Style="{StaticResource ToolbarButton}" Click="Cancel_Click"
                    Background="{StaticResource BgLightBrush}"/>
        </StackPanel>
    </Grid>
</Window>
