<Window x:Class="MyDM.App.Views.DownloadDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" Height="720" Width="980" MinHeight="620" MinWidth="860"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource WindowBackgroundBrush}"
        FontFamily="Bahnschrift">

    <Window.RenderTransform>
        <TranslateTransform Y="14"/>
    </Window.RenderTransform>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.28"/>
                    <DoubleAnimation Storyboard.TargetProperty="(Window.RenderTransform).(TranslateTransform.Y)"
                                     From="14" To="0" Duration="0:0:0.28"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" CornerRadius="14" Padding="16"
                Background="{StaticResource PanelCardBrush}"
                BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Realtime Download Monitor" FontSize="14" FontWeight="SemiBold"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock Text="{Binding FileName}" FontSize="21" FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}" Margin="0,4,0,0" TextTrimming="CharacterEllipsis"/>
                    <TextBlock Text="{Binding Url}" FontSize="12" Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,4,0,0" TextTrimming="CharacterEllipsis"/>
                </StackPanel>
                <Border Grid.Column="1" VerticalAlignment="Center" Padding="14,8"
                        CornerRadius="999" Background="{Binding StatusBadgeBrush}">
                    <TextBlock Text="{Binding StatusText}" FontSize="12" FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"/>
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="1" Margin="0,12,0,0" CornerRadius="14" Padding="16"
                Background="{StaticResource PanelCardBrush}"
                BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,10">
                    <TextBlock Text="File Size" Style="{StaticResource MetaLabelText}"/>
                    <TextBlock Text="{Binding FileSizeText}" Style="{StaticResource MetaValueText}"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,12,10">
                    <TextBlock Text="Downloaded" Style="{StaticResource MetaLabelText}"/>
                    <TextBlock Text="{Binding DownloadedText}" Style="{StaticResource MetaValueText}"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,12,10">
                    <TextBlock Text="Progress" Style="{StaticResource MetaLabelText}"/>
                    <TextBlock Text="{Binding ProgressText}" Style="{StaticResource MetaValueText}"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="3" Margin="0,0,0,10">
                    <TextBlock Text="Transfer Rate" Style="{StaticResource MetaLabelText}"/>
                    <TextBlock Text="{Binding TransferRateText}" Style="{StaticResource MetaValueText}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="Estimated Time Left" Style="{StaticResource MetaLabelText}"/>
                    <TextBlock Text="{Binding TimeLeftText}" Style="{StaticResource MetaValueText}"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,12,0">
                    <TextBlock Text="Resume Capability" Style="{StaticResource MetaLabelText}"/>
                    <TextBlock Text="{Binding ResumeCapabilityText}" Style="{StaticResource MetaValueText}"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,12,0">
                    <TextBlock Text="Connections" Style="{StaticResource MetaLabelText}"/>
                    <TextBlock Text="{Binding ConnectionsText}" Style="{StaticResource MetaValueText}"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="3">
                    <TextBlock Text="Category" Style="{StaticResource MetaLabelText}"/>
                    <TextBlock Text="{Binding CategoryText}" Style="{StaticResource MetaValueText}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Margin="0,12,0,0" CornerRadius="14" Padding="16"
                Background="{StaticResource PanelCardBrush}"
                BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="1">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Overall Download Progress" FontSize="13" FontWeight="SemiBold"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding ProgressText}" FontSize="13" FontWeight="Bold"
                               Foreground="{StaticResource AccentBrush}"/>
                </Grid>
                <ProgressBar Value="{Binding ProgressPercent}" Maximum="100" Height="12" Margin="0,8,0,0"/>
                <TextBlock Text="Connection Chunks" Margin="0,14,0,8" FontSize="12" FontWeight="SemiBold"
                           Foreground="{StaticResource TextMutedBrush}"/>
                <ItemsControl ItemsSource="{Binding SegmentRows}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="132" Margin="0,0,8,8" Padding="10"
                                    CornerRadius="10" Background="{StaticResource ChunkCardBrush}"
                                    BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{Binding SegmentLabel}" FontSize="11" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                    <ProgressBar Value="{Binding ProgressPercent}" Maximum="100" Height="8" Margin="0,6,0,6"/>
                                    <TextBlock Text="{Binding DownloadedText}" FontSize="10"
                                               Foreground="{StaticResource TextBrush}" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding SpeedText}" FontSize="10"
                                               Foreground="{StaticResource AccentBrush}" Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <Grid Grid.Row="3" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" CornerRadius="14" Padding="12"
                    Background="{StaticResource PanelCardBrush}"
                    BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Per-Connection Detail" FontSize="13" FontWeight="SemiBold"
                               Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                    <ListView Grid.Row="1" ItemsSource="{Binding SegmentRows}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="#" Width="35" DisplayMemberBinding="{Binding Index}"/>
                                <GridViewColumn Header="Range" Width="190" DisplayMemberBinding="{Binding RangeText}"/>
                                <GridViewColumn Header="Downloaded" Width="110" DisplayMemberBinding="{Binding DownloadedText}"/>
                                <GridViewColumn Header="Speed" Width="100" DisplayMemberBinding="{Binding SpeedText}"/>
                                <GridViewColumn Header="Status" Width="90" DisplayMemberBinding="{Binding StatusText}"/>
                                <GridViewColumn Header="Progress" Width="140">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid Width="130">
                                                <ProgressBar Value="{Binding ProgressPercent}" Maximum="100" Height="7"/>
                                                <TextBlock Text="{Binding ProgressText}" FontSize="10" Margin="0,8,0,0"
                                                           HorizontalAlignment="Center" Foreground="{StaticResource TextMutedBrush}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>

            <Border Grid.Column="2" CornerRadius="14" Padding="12"
                    Background="{StaticResource PanelCardBrush}"
                    BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Live Logs" FontSize="13" FontWeight="SemiBold"
                               Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                    <ListBox Grid.Row="1" ItemsSource="{Binding LogEntries}" FontFamily="Cascadia Mono"
                             FontSize="11" BorderThickness="0" Background="Transparent"
                             Foreground="{StaticResource TextMutedBrush}"/>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="4" Margin="0,12,0,0" CornerRadius="14" Padding="12"
                Background="{StaticResource PanelCardBrush}"
                BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Speed Limit (KB/s)" VerticalAlignment="Center"
                           Foreground="{StaticResource TextMutedBrush}" Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" Text="{Binding SpeedLimitInput, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                <Button Grid.Column="2" Content="Apply" Style="{StaticResource ToolbarButton}" Margin="10,0,0,0"
                        Padding="14,8" Click="ApplySpeedLimit_Click"/>

                <TextBlock Grid.Column="3" Text="{Binding SpeedLimitStatusText}" Margin="16,0,0,0"
                           VerticalAlignment="Center" Foreground="{StaticResource TextMutedBrush}"/>

                <Button Grid.Column="4" Content="{Binding PauseResumeButtonText}" Style="{StaticResource PrimaryButton}"
                        IsEnabled="{Binding CanPauseResume}" Margin="0,0,8,0" Padding="20,8"
                        Click="PauseResume_Click"/>
                <Button Grid.Column="5" Content="Cancel" Style="{StaticResource DangerButton}" Padding="20,8"
                        Margin="0,0,8,0" IsEnabled="{Binding CanCancel}" Click="CancelDownload_Click"/>
                <Button Grid.Column="6" Content="Close" Style="{StaticResource ToolbarButton}" Padding="20,8"
                        Click="Close_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
