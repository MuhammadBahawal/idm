<Window x:Class="MyDM.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:MyDM.App.Converters"
        Title="MyDM - Download Manager" Height="760" Width="1240" MinWidth="980" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource WindowBackgroundBrush}"
        FontFamily="Bahnschrift">

    <Window.Resources>
        <conv:FileSizeConverter x:Key="FileSizeConverter"/>
        <conv:SpeedConverter x:Key="SpeedConverter"/>
        <conv:TimeLeftConverter x:Key="TimeLeftConverter"/>
        <conv:StatusToStringConverter x:Key="StatusConverter"/>
        <conv:StatusToColorConverter x:Key="StatusColorConverter"/>
    </Window.Resources>

    <Window.RenderTransform>
        <TranslateTransform Y="12"/>
    </Window.RenderTransform>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.25"/>
                    <DoubleAnimation Storyboard.TargetProperty="(Window.RenderTransform).(TranslateTransform.Y)"
                                     From="12" To="0" Duration="0:0:0.25"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" CornerRadius="16" Padding="14"
                Background="{StaticResource ToolbarGradient}"
                BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <WrapPanel Grid.Column="0" VerticalAlignment="Center" ItemHeight="36">
                    <Button Content="Add URL" Style="{StaticResource PrimaryButton}" Command="{Binding AddUrlCommand}" Margin="0,0,8,8"/>
                    <Button Content="Resume" Style="{StaticResource ToolbarButton}" Command="{Binding ResumeSelectedCommand}" Margin="0,0,8,8"/>
                    <Button Content="Pause" Style="{StaticResource ToolbarButton}" Command="{Binding StopSelectedCommand}" Margin="0,0,8,8"/>
                    <Button Content="Pause All" Style="{StaticResource ToolbarButton}" Command="{Binding StopAllCommand}" Margin="0,0,8,8"/>
                    <Button Content="Delete" Style="{StaticResource DangerButton}" Command="{Binding DeleteSelectedCommand}" Margin="0,0,8,8"/>
                    <Button Content="Details" Style="{StaticResource ToolbarButton}" Command="{Binding ShowDetailsCommand}" Margin="0,0,8,8"/>
                    <Button Content="Start Queue" Style="{StaticResource ToolbarButton}" Command="{Binding StartQueueCommand}" Margin="0,0,8,8"/>
                    <Button Content="Stop Queue" Style="{StaticResource ToolbarButton}" Command="{Binding StopQueueCommand}" Margin="0,0,8,8"/>
                    <Button Content="Settings" Style="{StaticResource ToolbarButton}" Command="{Binding OpenSettingsCommand}" Margin="0,0,0,8"/>
                </WrapPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource MetricChipBrush}" CornerRadius="999" Padding="12,6" Margin="0,0,8,0">
                        <TextBlock Text="{Binding ActiveDownloadsText}" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                    </Border>
                    <Border Background="{StaticResource MetricChipBrush}" CornerRadius="999" Padding="12,6">
                        <TextBlock Text="{Binding TotalSpeedText}" FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,14,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" CornerRadius="16" Padding="10"
                    Background="{StaticResource PanelCardBrush}"
                    BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Categories" FontSize="14" FontWeight="SemiBold"
                               Foreground="{StaticResource TextMutedBrush}" Margin="8,6,8,8"/>
                    <ListBox Grid.Row="1" x:Name="CategoryList"
                             ItemsSource="{Binding Categories}"
                             SelectedItem="{Binding SelectedCategory}"
                             SelectionChanged="CategoryList_SelectionChanged">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="8,6"/>
                                <Setter Property="Margin" Value="2"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="CategoryItemBorder" Background="{TemplateBinding Background}" CornerRadius="8">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="CategoryItemBorder" Property="Background" Value="{StaticResource HoverItemBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="CategoryItemBorder" Property="Background" Value="{StaticResource SelectedItemBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <Border Grid.Column="2" CornerRadius="16" Padding="10"
                    Background="{StaticResource PanelCardBrush}"
                    BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Downloads" FontSize="14" FontWeight="SemiBold"
                               Foreground="{StaticResource TextMutedBrush}" Margin="8,6,8,8"/>
                    <ListView Grid.Row="1"
                              ItemsSource="{Binding Downloads}"
                              SelectedItem="{Binding SelectedDownload}"
                              MouseDoubleClick="DownloadList_DoubleClick">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="File Name" Width="270" DisplayMemberBinding="{Binding FileName}"/>
                                <GridViewColumn Header="Size" Width="100" DisplayMemberBinding="{Binding SizeText}"/>
                                <GridViewColumn Header="Status" Width="170" DisplayMemberBinding="{Binding StatusText}"/>
                                <GridViewColumn Header="Progress" Width="115">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid Width="105">
                                                <ProgressBar Value="{Binding Progress}" Maximum="100" Height="8"/>
                                                <TextBlock Text="{Binding Progress, StringFormat={}{0:F1}%}" Margin="0,9,0,0"
                                                           HorizontalAlignment="Center" FontSize="10"
                                                           Foreground="{StaticResource TextMutedBrush}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Speed" Width="110" DisplayMemberBinding="{Binding SpeedText}"/>
                                <GridViewColumn Header="Time Left" Width="100" DisplayMemberBinding="{Binding TimeLeftText}"/>
                                <GridViewColumn Header="Last Try" Width="140" DisplayMemberBinding="{Binding LastTryText}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="2" Margin="0,14,0,0" CornerRadius="12" Padding="12,8"
                Background="{StaticResource FooterCardBrush}"
                BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="1">
            <TextBlock Text="{Binding StatusBarText}" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
        </Border>
    </Grid>
</Window>
